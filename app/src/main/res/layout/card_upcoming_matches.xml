<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp"

    app:cardElevation="@dimen/activity_horizontal_margin"
    app:cardPreventCornerOverlap="true"
    card_view:background="@drawable/cardborders"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardborders"
        android:orientation="vertical"


        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp">

            <TableRow android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/upcomingmatch_title"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="hello i am there how are  "
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/upcomingmatch_teams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good For You"
                    android:textSize="13sp"
                    android:textStyle="normal"


                    />


            </TableRow>


            <TableRow android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/upcomingmatch_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good For You"
                    android:textSize="13sp"
                    android:textStyle="normal"


                    />


            </TableRow>


            <TableRow android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/upcomingmatch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good For You"
                    android:textSize="13sp"
                    android:textStyle="normal"


                    />


            </TableRow>


        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>